@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h2>Add a new client!</h2>
<p>We are open 9am to 8pm.</p>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.BestTime)
  @Html.TextBoxFor(model => model.BestTime, new { @type = "number", @min = "1"  })

  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all items", "Index")</p>